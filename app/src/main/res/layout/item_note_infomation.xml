<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_note_item"
        android:padding="8dp"
        >

    <TextView
            style="@style/TitleNoteTextStyle"
            android:id="@+id/tvNoteTitle"
            tools:text="title 1"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_alarm"
            android:id="@+id/imgAlarm"
            />

    <TextView
            android:id="@+id/tvNoteContent"
            style="@style/ContentNoteTextStyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/tvNoteTitle"
            android:layout_marginTop="16dp"
            tools:text="This is COntent "
            />

</RelativeLayout>