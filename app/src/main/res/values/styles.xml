<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Launcher Screen Theme -->
    <style name="LauncherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextViewParentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleActionBarTextStyle" parent="TextViewParentStyle">
        <item name="android:textSize">@dimen/text_size_larger</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    <style name="TitleNoteTextStyle" parent="TextViewParentStyle">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ContentNoteTextStyle" parent="TextViewParentStyle">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HeaderCreateNoteStyle" parent="TextViewParentStyle">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
